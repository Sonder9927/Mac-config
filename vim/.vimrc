syntax on
set number
set cursorline
set ruler
set tabstop=4
set showcmd
set cmdheight=2
set foldenable 
set nocompatible
set autoread
set autoindent
set cindent
set history=1000
set showmatch
set smartindent
set shiftwidth=4
set incsearch

let &termencoding=&encoding
set fileencodings=utf-8,gbk

set mouse=a
